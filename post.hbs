{{!< default}}

<main class="content" role="main">

    <article class="{{post_class}}">

        {{#post}}

        <header>
        <h1 class="post-title">{{{title}}}</h1>
        <div class="post-meta"><time datetime="{{date format='DD-MM-YYYY'}}">{{date format="dddd, DD MMMM YYYY"}}</time></div>
        {{#if tags}}<div class="post-meta tags">Posted in: {{tags}}</div>{{/if}}
        </header>

        <section class="post-content">
            {{content}}
        </section>

        <section class="share">
            <p class="info prompt">Share this post</p>
            <a href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}"
                onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                <span class="ion-social-twitter"></span>
            </a>
            <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                <span class="ion-social-facebook"></span>
            </a>
            <a href="https://plus.google.com/share?url={{url absolute="true"}}"
               onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                <span class="ion-social-googleplus"></span>
            </a>
        </section>

        <footer class="post-footer">

            {{#if author}}
            <section class="author">
                <div class="authorimage" style="background: url({{author.image}})"></div>
                <p class="attr">Author:</p>
                <h4><a href="{{author.website}}">{{author.name}}</a></h4>
                <p class="bio">{{author.bio}}</p>
            </section>
            {{/if}}

            {{! Include the mailchimp email sign-up form }}
            <div style="width:50%;margin-left:25%">
                <!-- Begin MailChimp Signup Form -->
                <link href="//cdn-images.mailchimp.com/embedcode/slim-081711.css" rel="stylesheet" type="text/css">
                <style type="text/css">
                    #mc_embed_signup{clear:left; font:14px Helvetica,Arial,sans-serif; }
                    /* Add your own MailChimp form style overrides in your site stylesheet or in this style block.
                       We recommend moving this block and the preceding CSS link to the HEAD of your HTML file. */
                </style>
                <div id="mc_embed_signup">
                    <form action="//space.us12.list-manage.com/subscribe/post?u=82dccf5bb52057ea8548da9d9&amp;id=11bbfd94f7" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                        <div id="mc_embed_signup_scroll">
                            <label for="mce-EMAIL">Receive notifications of new posts and other news</label>
                            <div style="text-align:center">
                                <div style="float:left;width:70%;margin-top:10px">
                                    <input type="email" value="" name="EMAIL" class="email" id="mce-EMAIL" placeholder="email address" style="margin:0; width:90%" required>
                                </div>
                                <div style="float:left;width:30%;margin-top:10px">
                                    <input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button">
                                </div>
                            </div>
                            <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                            <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_82dccf5bb52057ea8548da9d9_11bbfd94f7" tabindex="-1" value=""></div>

                        </div>
                    </form>
                </div>

                <!--End mc_embed_signup-->
            </div>

        </footer>

        {{/post}}

    </article>

</main>
