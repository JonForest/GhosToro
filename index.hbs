{{!< default}}

<div class="v-center">
    <div class="v-wrapper">
        <div class="description">
            <h1>{{@blog.description}}</h1>
        </div>

        {{> menu}}

        {{! Include the mailchimp email sign-up form }}
        <div style="width:50%;margin-left:25%">
            <!-- Begin MailChimp Signup Form -->
            <link href="//cdn-images.mailchimp.com/embedcode/slim-081711.css" rel="stylesheet" type="text/css">
            <style type="text/css">
                #mc_embed_signup{clear:left; font:14px Helvetica,Arial,sans-serif; }
                /* Add your own MailChimp form style overrides in your site stylesheet or in this style block.
                   We recommend moving this block and the preceding CSS link to the HEAD of your HTML file. */
            </style>
            <div id="mc_embed_signup">
                <form action="//space.us12.list-manage.com/subscribe/post?u=82dccf5bb52057ea8548da9d9&amp;id=11bbfd94f7" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                    <div id="mc_embed_signup_scroll">
                        <label for="mce-EMAIL">Receive notifications of new posts and other news</label>
                        <div style="text-align:center">
                            <div style="float:left;width:70%">
                                <input type="email" value="" name="EMAIL" class="email" id="mce-EMAIL" placeholder="email address" style="margin:0; width:90%" required>
                            </div>
                            <div style="float:left;width:30%">
                                <input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button">
                            </div>
                        </div>
                        <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                        <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_82dccf5bb52057ea8548da9d9_11bbfd94f7" tabindex="-1" value=""></div>

                    </div>
                </form>
            </div>

            <!--End mc_embed_signup-->
        </div>

        <div class="scroll-down">
            scroll down<span class="ion-arrow-down-c"></span>
        </div>
    </div>
</div>

<main id="content" class="content" role="main">

    {{#foreach posts}}

    <article class="preview">
        <header>
            <h1 class="post-title"><a href="{{url}}">{{{title}}}</a></h1>
            <div class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="dddd, MMMM DD, YYYY"}}</time></div>
        </header>
        <section class="post-excerpt">
            <p>{{excerpt}}&hellip;</p>
            <p class="readmore"><a href="{{url}}">Continue reading <span class="ion-arrow-right-c"></span></a></p>
        </section>
    </article>

    {{/foreach}}

    {{pagination}}

</main>